{
  "expo": {
    "name": "EPL News Hub",
    "slug": "eplnewshub",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#262627"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.eplnewshub.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "This app uses tracking to provide personalized content and ads.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to save images.",
        "NSCameraUsageDescription": "This app needs camera access to scan QR codes.",
        "UIBackgroundModes": ["fetch", "remote-notification"]
      },
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-6480210605786899~1234567890"
      },
      "associatedDomains": [
        "applinks:eplnewshub.com",
        "webcredentials:eplnewshub.com"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#262627"
      },
      "package": "com.eplnewshub.mobile",
      "versionCode": 1,
      "permissions": [
        "INTERNET",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK"
      ],
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-6480210605786899~0987654321"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "eplnewshub.com",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-notifications",
      "expo-haptics",
      "expo-local-authentication",
      "expo-image",
      [
        "expo-updates",
        {
          "username": "eplnewshub"
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-6480210605786899~0987654321",
          "iosAppId": "ca-app-pub-6480210605786899~1234567890"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 30000,
      "url": "https://u.expo.dev/your-project-id-here"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#38003c",
      "androidMode": "default",
      "androidCollapsedTitle": "EPL News Hub Updates"
    }
  }
}